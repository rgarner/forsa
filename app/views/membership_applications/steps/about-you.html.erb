<%= render 'step_title', title: 'About you', step: 1, of: 5 %>

<%= form_for @membership_application, url: wizard_path do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= form_field_errors f, :title %>
    <%= f.text_field :title %>

    <%= f.label :first_name %>
    <%= form_field_errors f, :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= form_field_errors f, :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :gender %>
    <%= form_field_errors f, :gender %>
    <%= help_for :gender %>

    <fieldset class="radio-group-vertical">
      <%= f.collection_radio_buttons :gender, MembershipApplication::GENDER, :to_s, :capitalize do |b| %>
        <% b.label { b.radio_button + b.text } %>
      <% end %>
    </fieldset>

    <%= f.label :date_of_birth %>
    <%= form_field_errors f, :date_of_birth %>
    <%= help_for :date_of_birth %>
    <%= f.text_field :date_of_birth %>

    <%= f.submit 'Next' %>
  </fieldset>
<% end %>
