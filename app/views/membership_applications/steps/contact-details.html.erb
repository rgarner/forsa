<%= render 'step_title', title: 'Contact details', step: 2, of: 5 %>

<%= form_for @membership_application, url: wizard_path do |f| %>
  <fieldset>
    <%= f.label :email %>
    <%= help_for :email %>
    <%= form_field_errors f, :email %>
    <%= f.text_field :email %>

    <%= f.label :phone_number %>
    <%= help_for :phone_number %>
    <%= form_field_errors f, :phone_number %>
    <%= f.text_field :phone_number %>

    <%= f.label :home_address %>
    <%= help_for :home_address %>
    <%= form_field_errors f, :home_address %>
    <%= f.text_area :home_address, rows: 5 %>

    <%= f.submit 'Next' %>
  </fieldset>
<% end %>
