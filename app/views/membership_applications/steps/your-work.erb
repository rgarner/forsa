<%= render 'step_title', title: 'Your work', step: 3, of: 5 %>

<%= form_for @membership_application, url: wizard_path do |f| %>
  <fieldset>
    <%= f.label :job_title %>
    <%= form_field_errors f, :job_title %>
    <%= f.text_field :job_title %>

    <%= f.label :employer %>
    <%= form_field_errors f, :employer %>
    <%= f.text_field :employer %>

    <%= f.label :work_address %>
    <%= form_field_errors f, :work_address %>
    <%= f.text_area :work_address, rows: 5 %>

    <%= f.label :payroll_number %>
    <%= form_field_errors f, :payroll_number %>
    <%= help_for :payroll_number %>
    <%= f.text_field :payroll_number, placeholder: true %>

    <%= f.submit 'Next' %>
  </fieldset>
<% end %>
