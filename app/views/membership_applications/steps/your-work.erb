<%= render 'step_title', title: 'Your work', step: 3, of: 5 %>

<%= form_for @membership_application, url: wizard_path do |f| %>
  <fieldset>
    <%= f.label :job_title %>
    <%= form_field_errors f, :job_title %>
    <%= f.text_field :job_title %>

    <%= f.label :employer %>
    <%= form_field_errors f, :employer %>
    <%= f.text_field :employer %>

    <%= f.label :department_section %>
    <%= form_field_errors f, :department_section %>
    <%= help_for :department_section %>
    <%= f.text_field :department_section %>

    <%= f.label :work_address %>
    <%= form_field_errors f, :work_address %>
    <%= help_for :work_address %>
    <%= f.text_area :work_address, rows: 5 %>

    <%= f.label :payroll_number %>
    <%= form_field_errors f, :payroll_number %>
    <%= help_for :payroll_number %>
    <%= f.text_field :payroll_number, placeholder: true %>

    <%= f.label :technical_grade %>
    <%= form_field_errors f, :technical_grade %>
    <%= help_for :technical_grade %>

    <fieldset class="radio-group-vertical">
      <%= f.collection_radio_buttons :technical_grade, MembershipApplication::TECHNICAL_GRADES, :first, :last do |b| %>
        <% b.label { b.radio_button + b.text } %>
      <% end %>
    </fieldset>

    <%= f.label :school_roll_number %>
    <%= form_field_errors f, :school_roll_number %>
    <%= help_for :school_roll_number %>
    <%= f.text_field :school_roll_number, placeholder: true %>

    <%= f.submit 'Next' %>
  </fieldset>
<% end %>
